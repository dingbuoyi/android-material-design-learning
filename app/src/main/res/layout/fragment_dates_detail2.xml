<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/datesScrollView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- first block user info , date time , distance -->
            <RelativeLayout
                android:id="@+id/datesDetailBlock1"
                android:layout_width="match_parent"
                android:layout_height="278dp">
                <!-- in the design it should be 270 ,but in the real world 278 is more fit -->

                <ImageView
                    android:id="@+id/datesBannerImage"
                    android:layout_width="match_parent"
                    android:layout_height="202dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/swift" />

                <TextView
                    android:id="@+id/nickNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/datesBannerImage"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="16dp"
                    android:text="Username,"
                    android:textColor="@color/purple_middle"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/userAgeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/datesBannerImage"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/nickNameText"
                    android:text="23"
                    android:textColor="@color/purple_middle"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/datesTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/divideLine"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:text="12/10/2018 at 18:50"
                    android:textColor="@color/text_color_grey_4"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/datesDistanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/divideLine"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:text="10.000 km"
                    android:textColor="@color/text_color_grey_4"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/divideLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/divide_line_color" />

                <com.github.siyamed.shapeimageview.DiamondImageRoundCornerView
                    android:id="@+id/userAvatarImage"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="180dp"
                    android:adjustViewBounds="true"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/swift"
                    app:siBorderColor="@android:color/white"
                    app:siBorderWidth="2dp" />

            </RelativeLayout>

            <!-- date desc -->
            <TextView
                android:id="@+id/datesDescText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="30dp"
                android:lineSpacingExtra="6sp"
                android:text="Date description , le Lorem Ipsum est tout simplement du faux texte employÃ© dans la composition et la mise en page avant impression."
                android:textColor="@color/text_color_grey" />

            <!-- location desc -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:lineSpacingExtra="2sp"
                    android:text="LOCATION"
                    android:textColor="@color/text_color_grey_5"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center|right"
                    android:text="Barcelona"
                    android:textColor="@color/text_color_grey_4"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/light_mauve_round_bg"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4sp"
                android:padding="16dp"
                android:text="The location of this date will be reveal to you if you are chosen by his creator, you will be then able to chat for free."
                android:textColor="@color/text_color_grey_4"
                android:textSize="14sp" />

            <!-- map -->
            <ImageView
                android:id="@+id/googleMapImage"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/swim" />

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginBottom="60dp" />

        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_collapseMode="pin" />

</android.support.design.widget.CoordinatorLayout>
